# Server App Environment Variables

# App Configuration
APP_NAME="Server App"
NODE_ENV=development
PORT=4000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/server_app_db
POSTGRES_URL=postgresql://postgres:password@localhost:5432/server_app_db

# Auth Configuration
AUTH_BASE_URL=http://localhost:4000
AUTH_SECRET=your-secret-key-here-min-32-chars-long-for-security
BETTER_AUTH_URL=http://localhost:4000
BETTER_AUTH_EMAIL=noreply@example.com

# Email Configuration
EMAIL_FROM=noreply@example.com
TEST_EMAIL= # Optional: For testing, all emails will be sent here instead

# Google OAuth (Primary social provider)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
NEXT_PUBLIC_GOOGLE_CLIENT_ID= # Same as GOOGLE_CLIENT_ID for client-side

# Admin Configuration (comma-separated user IDs)
ADMIN_USER_IDS=

# Trusted Origins (comma-separated URLs for CORS)
TRUSTED_ORIGINS=

# Stripe Configuration (optional)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_STARTER_PRICE_ID=
STRIPE_STARTER_ANNUAL_PRICE_ID=
STRIPE_PRO_PRICE_ID=
STRIPE_PRO_ANNUAL_PRICE_ID=

# Email Provider (choose one)
# Resend
RESEND_API_KEY=

# OR SendGrid
SENDGRID_API_KEY=

# OR AWS SES
AWS_SES_REGION=
AWS_SES_ACCESS_KEY_ID=
AWS_SES_SECRET_ACCESS_KEY=