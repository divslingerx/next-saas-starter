# Server App Environment Variables

# App Configuration
APP_NAME="Server App"
NODE_ENV=development

# Database
# Each app should have its own database for complete isolation
SERVER_DATABASE_URL=postgresql://postgres:password@localhost:5432/server_app_db

# Auth Configuration
AUTH_BASE_URL=http://localhost:3001
AUTH_SECRET=your-secret-key-here-min-32-chars-long-for-security

# Email Configuration
EMAIL_FROM=noreply@serverapp.com

# OAuth Providers (optional - only configure what you need)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Stripe Configuration (optional)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_STARTER_PRICE_ID=
STRIPE_STARTER_ANNUAL_PRICE_ID=
STRIPE_PRO_PRICE_ID=
STRIPE_PRO_ANNUAL_PRICE_ID=

# Email Provider (choose one)
# Resend
RESEND_API_KEY=

# OR SendGrid
SENDGRID_API_KEY=

# OR AWS SES
AWS_SES_REGION=
AWS_SES_ACCESS_KEY_ID=
