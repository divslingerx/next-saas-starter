{
  "name": "@charmlabs/monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.9.0",
  "scripts": {
    "build": "pnpm -r build",
    "check": "pnpm -r check",
    "dev": "pnpm --filter web dev",
    "dev:all": "pnpm -r --parallel dev",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx,json}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx,json}\" --cache",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "rm -rf node_modules && rm -rf packages/*/node_modules && rm -rf apps/*/node_modules && rm -rf plugins/*/node_modules",
    "db:generate": "pnpm --filter @charmlabs/db db:generate",
    "db:migrate": "pnpm --filter @charmlabs/db db:migrate",
    "db:push": "pnpm --filter @charmlabs/db db:push",
    "db:studio": "pnpm --filter @charmlabs/db db:studio"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  }
}